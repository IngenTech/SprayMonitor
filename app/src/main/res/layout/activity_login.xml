<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical"
    android:id="@+id/loginLayout"
    tools:context=".LoginActivity">

    <!--<include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"></include>
-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/loginLayoutMargin"
            android:orientation="vertical">

            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome To "
                android:textSize="@dimen/textSize"
                android:textStyle="bold" />-->

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="@dimen/endWedghtMargin"
                android:gravity="center"
                android:src="@drawable/spm_logo" />

            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Spray Monitoring System"
                android:textSize="@dimen/textSize"
                android:textStyle="bold" />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/endWedghtMargin"
                android:gravity="center"
                android:text="Enter your credentials to continue"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/endWedghtMargin"
                android:text="USERNAME"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxEms="10"
                android:background="@drawable/design_layouts"
                android:padding="3dp"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:maxLength="30" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/endWedghtMargin"
                android:text="PASSWORD"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLines="1"

                android:padding="3dp"
                android:background="@drawable/design_layouts"
                android:maxEms="10"
                android:maxLength="30" />

            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/White"
                android:text="LOGIN" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <CheckBox
                    android:id="@+id/check_password_remeber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/check_password_remeber"
                    android:text="Remember me"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
